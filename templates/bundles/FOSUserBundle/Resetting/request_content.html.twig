{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
    <link href="{{ asset('build/login.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}

<div class="text-center">
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-signin">

        <h1 class="h3 mb-3 font-weight-normal">{{ 'resetting.request.submit'|trans }}</h1>

        <label for="username" class="sr-only">{{ 'resetting.request.username'|trans }}</label>
        <input type="text" class="form-control" id="username" name="_username"
               placeholder="{{ 'resetting.request.username'|trans }}" required="required" autocomplete="username">
        <br>
        <input type="submit" id="_submit" name="_submit" value="{{ 'resetting.request.submit'|trans }}"
        class="btn btn-lg btn-primary btn-block"/>
    </form>
</div>
