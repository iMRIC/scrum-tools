{% extends 'base.html.twig' %}

{% block title %}Tweet Board{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('build/tweet-board.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Sprint #{{ sprint.number }}</h1>

    Tweets during sprint:
    <ul>
        {% for message in sprint.messages %}
            <li> {{ message.message }} ({{ message.likes.count }})</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
